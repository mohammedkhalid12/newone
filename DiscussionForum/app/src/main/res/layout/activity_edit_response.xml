<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/colordiscussionsubject"
    tools:context=".DiscussionSubject">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/discussion_subject_profile_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_280sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/ic_annotation_7das"/>

            <EditText
                android:id="@+id/edit_response_data"
                android:layout_width="@dimen/_260sdp"
                android:layout_height="@dimen/_85sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/subscribe_fields"
                android:fontFamily="@font/tajawal_tegular"
                android:gravity="center"
                android:hint="@string/bio"
                android:textColor="@color/colorItem"
                android:textSize="@dimen/_14sdp" />

            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_30sdp"
                android:layout_gravity="center"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp">

            <Button
                android:id="@+id/image"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/profile_image"
                android:drawableStart="@drawable/ic_image_black_24dp"
                android:paddingStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"/>

            <Button
                android:id="@+id/audio"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/profile_image"
                android:paddingStart="@dimen/_10sdp"
                android:drawableStart="@drawable/ic_settings_voice_black_24dp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"/>

            <Button
                android:id="@+id/video"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/profile_image"
                android:paddingStart="@dimen/_10sdp"
                android:drawableStart="@drawable/ic_videocam_black_24dp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"/>

            <Button
                android:id="@+id/send"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/profile_image"
                android:paddingStart="@dimen/_11sdp"
                android:drawableStart="@drawable/ic_send_black_24dp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"/>

        </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>