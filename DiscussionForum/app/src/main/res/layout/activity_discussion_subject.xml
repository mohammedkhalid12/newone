<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/colordiscussionsubject"
    tools:context=".DiscussionSubject">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/discussion_subject_profile_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/ic_mention"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/discussion_backgrund"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/discussion_subject_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:fontFamily="@font/tajawal_tegular"
                    android:text="Android testing"
                    android:textColor="@color/colorItem"
                    android:textSize="@dimen/_25sdp" />

                <TextView
                    android:id="@+id/discussion_subject_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/tajawal_tegular"
                    android:text="Author : Musab Ahmed "
                    android:textColor="@color/colorItem"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                    android:id="@+id/discussion_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:fontFamily="@font/tajawal_tegular"
                    android:text="I'm seeking help on how to load a data stored in a Firebase Database into a recyclerview.
The below screenshot indicates how I would like for the data to be structured when loaded into the recyclerview.
I am able to access the data from individual paths such as. "
                    android:textColor="@color/colorItem"
                    android:textSize="@dimen/_13sdp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/response_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_27sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_27sdp" />

                <Button
                    android:id="@+id/add_response"
                    android:layout_width="@dimen/_240sdp"
                    android:layout_height="@dimen/_45ssp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@drawable/start_button"
                    android:drawableEnd="@drawable/ic_edit_black_24dp"
                    android:fontFamily="@font/tajawal_tegular"
                    android:paddingEnd="@dimen/_30sdp"
                    android:text="@string/add_response"
                    android:textColor="@color/colorWÙ‹hite"
                    android:textSize="@dimen/_15sdp" />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>